@model FinalYearProject.Models.Incentives

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Incentives</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="incentives_id" />
            <input type="hidden" asp-for="company_id" />
            <div class="form-group">
                <label asp-for="good_rating_incentives" class="control-label"></label>
                <input asp-for="good_rating_incentives" class="form-control" required/>
                <span asp-validation-for="good_rating_incentives" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attendance_Excellence_Award" class="control-label"></label>
                <input asp-for="attendance_Excellence_Award" class="form-control" required />
                <span asp-validation-for="attendance_Excellence_Award" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
