            </div>
            <div class="form-group">
                <label asp-for="good_rating_incentives" class="control-label"></label>
                <input asp-for="good_rating_incentives" class="form-control" required />
                <span asp-validation-for="good_rating_incentives" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attendance_Excellence_Award" class="control-label"></label>
                <input asp-for="attendance_Excellence_Award" class="form-control" required />
                <span asp-validation-for="attendance_Excellence_Award" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
