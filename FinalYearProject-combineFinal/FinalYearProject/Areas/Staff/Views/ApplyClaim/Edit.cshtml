@model FinalYearProject.Models.ViewModels.EmployeeEditClaimVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Claim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="claim.claim_id" />
            <input type="hidden" asp-for="claim.staff_id" />
            <input type="hidden" asp-for="claim.date_apply" />

            <div class="form-group">
                <label asp-for="claim_reason" class="control-label"></label>
                <input asp-for="claim_reason" class="form-control" />
                <span asp-validation-for="claim_reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="claimAmount" class="control-label"></label>
                <input asp-for="claimAmount" class="form-control" />
                <span asp-validation-for="claimAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                Current File:
                <input asp-for="claim.claimFile" class="form-control" readonly />
                <br />
                Upload New:
                <input type="file" name="claimFile" class="form-control" />
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>
</div>

