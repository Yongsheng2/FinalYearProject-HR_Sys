@model IEnumerable<FinalYearProject.Models.SurveyTaken>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Survey Taken</h2>
    </div>
    <div class="col-6 text-right">
        <p>
            <a asp-action="ViewCompanySurvey" class="btn btn-info">Answer New Survey</a>
        </p>        
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(model => model.surveyTaken_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Survey)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.surveyTaken_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Survey.survey_name)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-action="Details" asp-route-Id="@item.surveyTaken_id">
                            <i class="fas fa-list-alt"></i>
                        </a>
                        <a class="btn btn-success text-white" asp-action="Edit" asp-route-Id="@item.surveyTaken_id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.surveyTaken_id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </table>
}
else
{
<p>There are no survey taken</p>    
}

