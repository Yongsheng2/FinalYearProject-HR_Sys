@model FinalYearProject.Models.Payroll


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Create</h2>

<h4>Payroll</h4>

<hr />

<div class="row">
    <form method="post" asp-action="CreatePayroll">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="staff_id" class="col-form-label"></label>
                <input asp-for="staff_id" class="form-control" />
                <span asp-validation-for="staff_id" class="text-danger"></span>
            </div>
        </div>
        <div>         
            <div class="form-group row">
                <label class="col-form-label">Start Date</label>
                <input asp-for="date_created" name="start_date" class="form-control" required />
            </div>
        </div>
        <div>
            <div class="form-group row">
                <label class="col-form-label">End Date</label>
                <input asp-for="date_created" name="end_date" class="form-control" required />
            </div>
        </div>
        <input asp-for="date_created" type="hidden" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fffffff")" />
        <br />
        <div class="form-group row">
            <div class="row">
                <div class="col-5">
                    <partial name="_CreateBackPartial"></partial>
                </div>
            </div>
        </div>
    </form>
</div>

