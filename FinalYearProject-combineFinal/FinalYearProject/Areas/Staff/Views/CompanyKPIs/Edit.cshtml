@model FinalYearProject.Models.CompanyKPI

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CompanyKPI</h4>
@if (ViewData["ErrorMessageDate"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessageDate"]
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="KPI_id" class="form-control"  />
            <input type="hidden" asp-for="company_id" class="form-control" />
            <div class="form-group">
                <label asp-for="target_name" class="control-label"></label>
                <input asp-for="target_name" class="form-control" required />
                <span asp-validation-for="target_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="target_KPI" class="control-label"></label>
                <input asp-for="target_KPI" class="form-control" required />
                <span asp-validation-for="target_KPI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hit_KPI_allowance" class="control-label"></label>
                <input asp-for="hit_KPI_allowance" class="form-control" required />
                <span asp-validation-for="hit_KPI_allowance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control" asp-items="@(new SelectList(ViewBag.statusOptions))"></select>
            </div>
            <div class="form-group">
                <label asp-for="start_date" class="control-label"></label>
                <input asp-for="start_date" class="form-control" required />
                <span asp-validation-for="start_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="end_date" class="control-label"></label>
                <input asp-for="end_date" class="form-control" required />
                <span asp-validation-for="end_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>                
            </div>
        </form>
    </div>
</div>

<div>
</div>

