@model FinalYearProject.Models.EmployeeTask

@{
    ViewData["Title"] = "Submit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Submit</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Submit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Model.staff_id
                <br />
            </div>
            <div class="form-group">
                <label asp-for="emtask_id" class="control-label"></label>
                <input asp-for="emtask_id" class="form-control" readonly />
                <span asp-validation-for="emtask_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emtask_title" class="control-label"></label>
                <input asp-for="emtask_title" class="form-control" readonly />
                <span asp-validation-for="emtask_title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date_upload" class="control-label"></label>
                <input asp-for="date_upload" class="form-control" readonly />
                <span asp-validation-for="date_upload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emtask_duration" class="control-label"></label>
                <input asp-for="emtask_duration" class="form-control" readonly />
                <span asp-validation-for="emtask_duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emtaskDetail" class="control-label"></label>
            </div>
            <div class="form-group">
                <a asp-action="Download" asp-route-id="@Model.emtask_id" class="btn btn-primary">Download</a>
            </div>
            <div class="form-group">
                <label asp-for="emtaskdoneFile" class="control-label"></label>
                <input type="file" name="emtaskdoneFile" class="form-control" />
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Submit" asp-route-id="@Model" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>
</div>

