@model FinalYearProject.Models.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Question</h1>

<h4>Question</h4>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
