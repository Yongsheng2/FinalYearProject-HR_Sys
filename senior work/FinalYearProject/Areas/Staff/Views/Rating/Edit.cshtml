@model FinalYearProject.Models.Rating

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Edit</h2>

<h4>Rating @Model.staff_rated</h4>

<hr />


<div class="row">
    <form method="post" asp-action="Edit">
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="rated_by" />
            <input type="hidden" asp-for="staff_rated" />
            <div class="form-group row">
                <label asp-for="rating_id" class="col-form-label"></label>
                <input asp-for="rating_id" class="form-control" readonly/>
                <span asp-validation-for="rating_id" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="rating" class="col-form-label"></label>
                <input asp-for="rating" class="form-control" />
                <span asp-validation-for="rating" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="row">
                <div class="form-group">
                    <input type="submit" value="Save" asp-route-id="@Model" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>