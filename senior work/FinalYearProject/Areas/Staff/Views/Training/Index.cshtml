@model IEnumerable<FinalYearProject.Models.Training>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <partial name="_CreateButtonPartial"></partial>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.training_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.training_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duration)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.training_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.training_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.start_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.duration)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.training_id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.training_id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.training_id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
