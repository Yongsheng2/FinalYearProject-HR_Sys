@model IEnumerable<FinalYearProject.Models.Payroll>

@{
    ViewData["Title"] = "Views";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Payroll</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.staff_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.month_salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.overtime_pay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kwsp_total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.zakat_total)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.staff_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.month_salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.overtime_pay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kwsp_total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.zakat_total)
                </td>
            </tr>
        }
    </tbody>
</table>
