@model FinalYearProject.Models.Payroll


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Create</h2>

<h4>Payroll</h4>

<hr />

<div class="row">
    <form method="post" asp-action="CreatePayroll">
