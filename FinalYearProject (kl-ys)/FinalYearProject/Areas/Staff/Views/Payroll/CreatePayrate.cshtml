@model FinalYearProject.Models.Payrate

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Create</h2>

<div class="row">
    <form method="post" asp-action="CreatePayrate">
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
          
            <div class="form-group row">
                <label asp-for="payrate_name" class="col-form-label"></label>
                <input asp-for="payrate_name" class="form-control" />
                <span asp-validation-for="payrate_name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="payrate_ratePerHour" class="col-form-label"></label>
                <input asp-for="payrate_ratePerHour" class="form-control" />
                <span asp-validation-for="payrate_ratePerHour" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </form>
</div>