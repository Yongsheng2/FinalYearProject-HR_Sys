@model FinalYearProject.Models.Chatbox

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create New Chat</h1>
<div style="display: flex;">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="admin_id" />
        <input type="hidden" asp-for="staff_id" />
        <div class="form-group">
            <label asp-for="timestamp" class="control-label"></label>
            <input asp-for="timestamp" class="form-control" readonly />
            <span asp-validation-for="timestamp" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="chat_id" class="control-label"></label>
            <input asp-for="chat_id" class="form-control" readonly />
            <span asp-validation-for="chat_id" class="text-danger"></span>
        </div>
        <div class="senduser" style="display:flex;">
            <div class="form-group" style="justify-content:left;">
                <label asp-for="send_name" class="control-label"></label>
                <input asp-for="send_name" class="form-control" readonly />
                <span asp-validation-for="send_name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" style="justify-content:right; margin-left: 10px;">
                <label asp-for="send_id" class="control-label"></label>
                <input asp-for="send_id" class="form-control" readonly />
                <span asp-validation-for="send_id" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="receive_id" class="col-form-label"></label>
            <select asp-for="receive_id" class="form-control" asp-items="ViewBag.ReceiveOptions"></select>
        </div>

        <div class="form-group">
            <label asp-for="chat_ctn" class="control-label">Chat Content</label>
            <textarea asp-for="chat_ctn" class="form-control" rows="2"></textarea>
            <span asp-validation-for="chat_ctn" class="text-danger"></span>
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>
</div>
