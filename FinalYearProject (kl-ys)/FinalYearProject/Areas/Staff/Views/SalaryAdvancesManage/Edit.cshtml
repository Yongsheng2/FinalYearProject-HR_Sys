@model FinalYearProject.Models.SalaryAdvance

@{
    ViewData["Title"] = "Salary Advance Manage";
}


<h4>Salary Advance Manage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="advance_id" class="control-label"></label>
                <input asp-for="advance_id" class="form-control" readonly />
                <span asp-validation-for="advance_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="employee_id" class="control-label"></label>
                <input asp-for="employee_id" class="form-control" readonly />
                <span asp-validation-for="employee_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reason" class="control-label"></label>
                <input asp-for="reason" class="form-control" readonly />
                <span asp-validation-for="reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="amount" class="control-label"></label>
                <input asp-for="amount" class="form-control" readonly />
                <span asp-validation-for="amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="time_to_payback" class="control-label"></label>
                <input asp-for="time_to_payback" class="form-control" readonly />
                <span asp-validation-for="time_to_payback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status" class="control-label"></label>
                <select asp-for="status" class="form-control" asp-items="ViewBag.status"></select>
                <span asp-validation-for="status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="request_date" class="form-control" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
