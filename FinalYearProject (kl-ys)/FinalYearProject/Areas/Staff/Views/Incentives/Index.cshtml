@model IEnumerable<FinalYearProject.Models.Incentives>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Company KPI</h2>
    </div>
    <div class="col-6 text-right">
        @if (Model.Count() < 1)

        {
            <p>
                <a asp-action="Create" class="btn btn-info">Create New</a>
            </p>
        }
    </div>
</div>

@*@if (Model.Count() < 1)

