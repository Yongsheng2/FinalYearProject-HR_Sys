@model IEnumerable<Survey>

@{
    ViewData["Title"] = "Answer Survey";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Survey List</h2>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Survey
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
                <form asp-action="AnswerSurvey">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.survey_name)
                            </td>
                            <td>
                                <button type="submit" name="selectedSurveyId" value="@item.survey_id" class="btn btn-info">Answer Survey</button>
                            </td>

                        </tr>
                    }
                </form>

            </table>
        }
        else
        {
            <p>There are no Surveys in your company.</p>
        }
    </div>
</div>
