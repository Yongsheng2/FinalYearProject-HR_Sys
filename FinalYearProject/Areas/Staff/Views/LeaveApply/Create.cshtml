@model FinalYearProject.Models.Leave

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Leave</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="staff_id" />
            <div class="form-group">
                <label asp-for="leave_id" class="control-label"></label>
                <input asp-for="leave_id" class="form-control" readonly/>
                <span asp-validation-for="leave_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="leave_start" class="control-label"></label>
                <input asp-for="leave_start" class="form-control"  />
                <span asp-validation-for="leave_start" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="leaveType" class="col-form-label"></label>
                <select asp-for="leaveType" class="form-control" asp-items="ViewBag.leaveType"></select>
            </div>
            <div class="form-group">
                <label asp-for="leave_end" class="control-label"></label>
                <input asp-for="leave_end" class="form-control" />
                <span asp-validation-for="leave_end" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="leave_reason" class="control-label"></label>
                <input asp-for="leave_reason" class="form-control" />
                <span asp-validation-for="leave_reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="doc_filepath" class="control-label"></label>
                <input type="file" name="leaveFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" asp-route-id="@Model" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

