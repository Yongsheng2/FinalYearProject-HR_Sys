@model IEnumerable<EmployeeDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial"></partial>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.employee_id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.employee_name)
                    </th>
                    <th>
                        
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.employee_id)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.employee_name)
                        </td>
                        <td>
                            <partial name="_ViewEditDeletePartial" model="@item.employee_id"></partial>
                        </td>
                        <td>
                            <a class="btn btn-danger text-white" asp-action="Index" asp-controller="Document" asp-area="Staff" asp-route-Id="@item.employee_id">
                                Documents
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>There are no employees.</p>
        }
    </div>
</div>